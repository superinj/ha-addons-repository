{
  "name": "own2mqtt",
  "version": "0.3.3",
  "slug": "own2mqtt",
  "description": "Client to OpenWebNet Server",
  "url": "https://github.com/superinj/addon-own2mqtt",
  "arch": [
    "aarch64",
    "amd64",
    "armhf",
    "armv7",
    "i386"
  ],
  "startup": "application",
  "boot": "auto",
  "image": "superinj/{arch}-own2mqtt",
  "options": {
    "own_server_ip": "",
    "own_server_port": 20000,
    "own_server_password": "",
    "mqtt_server_ip": "",
    "mqtt_server_port": 1883,
    "mqtt_server_user": "",
    "mqtt_server_password": "",
    "log_level": "INFO",
    "debug": false,
    "mqtt_client_name": "own2mqtt",
    "mqtt_base_topic": "openwebnet",
    "thermo_zones": [],
    "f520_ids": [],
    "f522_ids": [],
    "query_interval": {
      "total_energy_query": 60
    }
  },
  "schema": {
    "own_server_ip": "str",
    "own_server_port": "int",
    "own_server_password": "str",
    "mqtt_server_ip": "str",
    "mqtt_server_port": "int",
    "mqtt_server_user": "str",
    "mqtt_server_password": "str",
    "log_level": "match(^(TRACE|DEBUG|INFO|NOTICE|WARNING|ERROR|FATAL)$)?",
    "debug": "bool",
    "mqtt_client_name": "str",
    "mqtt_base_topic": "str",
    "thermo_zones": [
      "match(^[0-9]+$)"
    ],
    "f520_ids": [
      "match(^[0-9]+$)"
    ],
    "f522_ids": [
      "match(^[0-9]+$)"
    ],
    "query_interval": {
      "total_energy_query": "int"
    }
  }
}